<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.junstagram.model.PhotoInfo" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_headText"
            android:text ="@{item.title}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/item_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            bind:photoId="@{item.image}"

            android:scaleType="centerInside"
            app:layout_constraintBottom_toTopOf="@id/item_bodyText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/item_headText"
            app:layout_constraintTop_toBottomOf="@id/item_headText" />

        <TextView
            android:id="@+id/item_bodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="@{item.bodyText}"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/item_photo"
            app:layout_constraintTop_toBottomOf="@id/item_photo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>